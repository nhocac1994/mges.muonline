{
  "name": "mu-online-backend-api",
  "version": "1.0.0",
  "description": "Backend API Server cho Mu Online - Bảo mật database",
  "main": "dist/server.js",
  "bin": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "build:exe": "pkg . --targets node18-win-x64 --output dist/mu-backend-api.exe",
    "build:exe:all": "pkg . --targets node18-win-x64,node18-linux-x64 --output dist/mu-backend-api"
  },
  "dependencies": {
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "mssql": "^11.0.1",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "dist/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist"
  }
}

